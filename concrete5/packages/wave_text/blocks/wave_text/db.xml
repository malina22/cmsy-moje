<?xml version="1.0"?>
<schema version="0.3">
	<table name="btWaveText">
		<field name="bID" type="I">
			<key />
			<unsigned />
		</field>	
	
		<field name="wtText" type="X"></field>
		<field name="wtPeriod" type="N" size="32"></field>
		<field name="wtAmplitude" type="C" size="32"></field>
		<field name="wtLetterSpace" type="C" size="32"></field>
		
		<field name="wtColor" type="C" size="100"></field>
		<field name="wtFormat" type="C" size="32"><default value="h3" /></field>
		<field name="wtHeight" type="C" size="32"></field>
		
	</table>
</schema>